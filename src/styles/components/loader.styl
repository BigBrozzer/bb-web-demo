.loader
  position relative
  display inline-block

  &:after
    content ''
    position absolute
    right -30px
    border 5px solid #fff
    border-top 5px solid #3498db
    border-radius 50%
    width 15px
    height 15px
    animation spin 2s linear infinite

@keyframes spin
  0%
    transform rotate(0deg)
  100%
    transform: rotate(360deg)